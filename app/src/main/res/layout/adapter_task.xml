<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="5dp">

    <View
        android:id="@+id/btn_expand"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:background="@drawable/expande_collapse"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/txt_description"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Loong task you have to d oa lot of some very diffren tthings to achive something. Loong task you have to d oa lot of some very diffren tthings to achive something. Loong task you have to d oa lot of some very diffren tthings to achive something."
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@+id/btn_expand"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/txt_rules"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Hours: 08,09,13,21\nDays:1,2,3,4,5,6,7"
        android:textSize="10sp"
        app:layout_constraintBottom_toTopOf="@+id/bottom_border"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@+id/btn_expand"
        app:layout_constraintTop_toBottomOf="@+id/txt_description" />

    <View
        android:id="@+id/bottom_border"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@drawable/shape_rectangle_black"
        app:layout_constraintBottom_toBottomOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>